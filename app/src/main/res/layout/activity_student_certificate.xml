<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.wing.schoollibrary.activity.StudentCertificateActivity">

    <include layout="@layout/titlebar"/>

    <ImageView
        android:layout_centerInParent="true"
        android:id="@+id/iv_certificate"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/tv_adv"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/iv_certificate"
        android:textSize="18sp"
        android:textColor="#000000"
        android:text="长按二维码获取个人信息，或者给图书馆管理员扫描识别身份"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/tv_tip"
        android:layout_centerInParent="true"
        android:textSize="18sp"
        android:textColor="#000000"
        android:text="你还没有登录，请先登录！"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</RelativeLayout>
